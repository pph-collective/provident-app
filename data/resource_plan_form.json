{
  "title": "Six Month Resource Plan",
  "type": "organization",
  "questions": [
    {
      "model": "bg_id",
      "component": "TextInput",
      "label": "Neighborhood ID",
      "validations": "yup.string().length(7, 'Must be exactly 7 digits').matches(/^[0-9]+$/, 'Must be only digits: 0-9').required()",
      "required": true,
      "read_only": true
    },
    {
      "model": "municipality",
      "component": "TextInput",
      "label": "Municipality",
      "validations": "yup.string().required()",
      "required": true,
      "read_only": true
    },
    {
      "model": "goal_form",
      "component": "SubForm",
      "label": "Goal",
      "repeat_button_title": "+ Goal",
      "questions": [
        {
          "model":  "goal",
          "component": "TextArea",
          "label": "What do you plan on doing in this neighborhood?",
          "required": true
        },
        {
          "model": "task_form",
          "component": "SubForm",
          "label": "Task",
          "help_text": "What steps do you need to take towards your goal?",
          "repeat_button_title": "+ Task",
          "questions": [
            {
              "model": "plan",
              "component": "Select",
              "label": "Plan",
              "required": true,
              "options": [
                "Increasing an existing service",
                "Creating a new service",
                "Expanding infrastructure",
                "Expanding funding",
                "Capacity building",
                "Relationship building"
              ]
            },
            {
              "model": "plan_description",
              "component": "TextArea",
              "label": "Plan Description",
              "help_text": "(Optional)"
            },
            {
              "model": "person",
              "component": "TextInput",
              "label": "Directly Responsible Person",
              "required": true
            },
            {
              "model": "start_date",
              "component": "Date",
              "label": "Start Date"
            },
            {
              "model": "end_date",
              "component": "Select",
              "label": "Planned End Date",
              "options": [
                "1 month",
                "3 months",
                "6 months"
              ]
            }
          ]
        }
      ]
    }
  ],
  "followup_form": {
    "title": "Mid-way Followup to the Six Month Resource Plan",
    "followup_interval": "3 months",
    "questions": [
      {
        "source_model": "bg_id",
        "model": "bg_id",
        "label": "Neighborhood ID",
        "read_only": true
      },
      {
        "source_model": "municipality",
        "model": "municipality",
        "label": "Municipality",
        "read_only": true
      },
      {
        "label": "Goal",
        "source_model": "goal_form",
        "model": "goal_form",
        "questions": [
          {
            "label": "What do you plan on doing in this neighborhood?",
            "source_model": "goal",
            "model": "goal",
            "read_only": true
          },
          {
            "label": "What progress have you made towards this goal?",
            "model": "progress",
            "component": "TextArea",
            "required": true
          },
          {
            "label": "Task",
            "source_model": "task_form",
            "model": "task_form",
            "repeat_button_title": "+ Task",
            "questions": [
              {
                "source_model": "plan",
                "model": "plan",
                "label": "Plan",
                "required": true
              },
              {
                "source_model": "plan_description",
                "model": "plan_description",
                "label": "Description"
              },
              {
                "model": "status",
                "component": "Select",
                "label": "What is the current status of this task?",
                "options": [
                  "Not started",
                  "In progress",
                  "On hold",
                  "Completed"
                ],
                "required": true
              },
              {
                "model": "progress",
                "label": "What progress have you made towards this task?",
                "component": "TextArea",
                "required": true,
                "condition": "(model) => model.status && model.status !== 'Not started'"
              },
              {
                "model": "next",
                "component": "Select",
                "label": "What would you like to do next with this task?",
                "options": [
                  "Continue as planned",
                  "Edit the goal/task",
                  "Close task (completed)",
                  "Close task (unable to complete)"
                ],
                "required": true
              }
            ]
          }
        ]
      }
    ],
    "followup_form": {
      "title": "Followup to Six Month Resource Plan",
      "followup_interval": "3 months",
      "questions": [
        {
          "source_model": "bg_id",
          "model": "bg_id",
          "label": "Neighborhood ID",
          "read_only": true
        },
        {
          "source_model": "municipality",
          "model": "municipality",
          "label": "Municipality",
          "read_only": true
        },
        {
          "label": "Goal",
          "source_model": "goal_form",
          "model": "goal_form",
          "questions": [
            {
              "label": "What do you plan on doing in this neighborhood?",
              "source_model": "goal",
              "model": "goal",
              "read_only": true
            },
            {
              "label": "What progress have you made towards this goal?",
              "help_text": "To help with answering the next question, we've brought forward your progress updates from the previous form.",
              "source_model": "progress",
              "model": "progress",
              "read_only": true,
              "condition": "(model) => model.progress !== undefined"
            },
            {
              "label": "What outcomes did you have from this goal?",
              "model": "outcome",
              "component": "TextArea",
              "required": true
            },
            {
              "label": "Task",
              "source_model": "task_form",
              "model": "task_form",
              "questions": [
                {
                  "source_model": "plan",
                  "model": "plan",
                  "label": "Plan",
                  "required": true
                },
                {
                  "source_model": "plan_description",
                  "model": "plan_description",
                  "label": "Description"
                },
                {
                  "source_model": "status",
                  "model": "status",
                  "label": "What is the current status of this task?",
                  "required": true
                },
                {
                  "source_model": "progress",
                  "model": "progress",
                  "label": "What progress have you made towards this task?",
                  "help_text": "We've brought forward your progress updates from the previous form where available.",
                  "condition": "(model) => model.progress !== undefined || (model.status && model.status !== 'Not started')"
                },
                {
                  "model": "outcome",
                  "label": "What were your outcomes?",
                  "component": "TextArea"
                },
                {
                  "source_model": "next",
                  "model": "next",
                  "label": "What would you like to do next with this task?",
                  "required": true
                }
              ]
            }
          ]
        }
      ]
    }
  }
}